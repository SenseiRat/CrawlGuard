{
  "manifest_version": 3,
  "name": "CrawlGuard",
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "version": "0.1",
  "permissions": ["contextMenus","scripting","activeTab"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "images/CrawlGuard_Icon_16x16.png",
    "48": "images/CrawlGuard_Icon_48x48.png",
    "128": "images/CrawlGuard_Icon_128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/CrawlGuard_Icon_48x48.png"
  },
  "options_page": "options.html"
}
